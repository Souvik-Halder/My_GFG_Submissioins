class Solution
{
    public static Node reverseBetween(Node head, int m, int n)
    {
      //base case
      if(head==null){
          return null;
      }
      // declare the prev with dummyNode
      Node dummyNode=new Node(0);
      Node prev=dummyNode;
      dummyNode.next=head;
      
      //Let's traverse the prev value until we find the position for swaping
      for(int i=0;i<m-1;i++){
          prev=prev.next;
      }
      
      // declare and assign the prev curr and nxt pointer
      Node curr=prev.next;
      Node nxt=curr.next;
      
      // swaping of the nodes
      for(int i=0;i<(n-m);i++){
          
          //Write the logic from dry run in copy just for better understanding
          curr.next=nxt.next;
          nxt.next=prev.next;
          prev.next=nxt;
          nxt=nxt.next;
          
      }
      return dummyNode.next;
      
    }
}
